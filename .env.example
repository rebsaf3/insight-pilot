# =============================================================================
# InsightPilot Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# Anthropic API Key (required for AI features)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Application secret key for session signing (required — generate a random string)
APP_SECRET_KEY=change-me-to-a-random-string

# Claude model (optional, default: claude-sonnet-4-5-20250929)
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Max tokens for Claude responses (optional, default: 4096)
CLAUDE_MAX_TOKENS=4096

# Code execution timeout in seconds (optional, default: 30)
CODE_EXEC_TIMEOUT=30

# Max file upload size in MB (optional, default: 200)
MAX_FILE_SIZE_MB=200

# Stripe (required for billing)
STRIPE_SECRET_KEY=sk_test_your-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-secret-here
STRIPE_PRO_PRICE_ID=price_xxx
STRIPE_ENTERPRISE_PRICE_ID=price_xxx
STRIPE_API_ADDON_PRICE_ID=price_xxx
STRIPE_TOPUP_PRICE_ID=price_xxx

# Email / SMTP (required for 2FA email codes and invitations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=InsightPilot
SMTP_FROM_EMAIL=noreply@insightpilot.com

# Encryption key for TOTP secrets at rest (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your-fernet-key-here

# SSO — Google OIDC (optional, for Pro+ workspaces)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# SSO — Microsoft OIDC (optional, for Pro+ workspaces)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=

# API server port (optional, default: 8100)
API_SERVER_PORT=8100

# Base URL for callbacks (SSO, webhooks)
BASE_URL=http://localhost:8100
